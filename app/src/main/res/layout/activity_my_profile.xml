<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanpoulier.spotlight2.MyProfile"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:id="@+id/imgview_profile"
                android:scaleType="fitXY"
                android:layout_above="@+id/txt_Full_Name"
                android:layout_centerHorizontal="true"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:background="#616161"
                android:onClick="OpenProfileImageGallery"
                android:layout_columnSpan="2" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_Edit"
                android:src="@mipmap/my_profile_edit"
                android:layout_above="@+id/txt_Full_Name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="right"
                android:onClick="ProfileEdit"
                android:background="?android:selectableItemBackground"
                android:layout_columnSpan="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Enter Full Name here"
                android:ems="10"
                android:id="@+id/txt_Full_Name"
                android:layout_above="@+id/txt_Email"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txt_Email"
                android:text="Enter Email Address here"
                android:layout_above="@+id/txt_Mobile"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txt_Mobile"
                android:text="Enter Mobile No. here"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/btn_Edit"
                android:layout_alignEnd="@+id/btn_Edit"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Save"
                android:id="@+id/btn_profile_save"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="right"
                android:onClick="ProfileSave"
                android:background="#2980b9"
                android:textColor="#ffffff"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Reputation"
                android:id="@+id/textView33"
                android:layout_row="6"
                android:layout_column="0"
                android:textColor="#2980b9"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="400 points"
                android:id="@+id/textView110"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <Space
                android:layout_width="20px"
                android:layout_height="30px"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Badges"
                android:id="@+id/textView34"
                android:layout_row="9"
                android:layout_column="0"
                android:textColor="#2980b9"
                android:layout_columnSpan="2" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView7"
                android:layout_row="10"
                android:layout_column="0"
                android:src="@mipmap/badge_1"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView8"
                android:layout_row="10"
                android:layout_column="1"
                android:src="@mipmap/badge_2" />

            <Space
                android:layout_width="20px"
                android:layout_height="30px"
                android:layout_row="11"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="No. of complaints submitted"
                android:id="@+id/textView35"
                android:layout_row="12"
                android:layout_column="0"
                android:textColor="#2980b9"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3"
                android:id="@+id/textView112"
                android:layout_row="13"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <Space
                android:layout_width="20px"
                android:layout_height="60px"
                android:layout_row="14"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Complaint anonymity"
                android:id="@+id/textView36"
                android:layout_row="15"
                android:layout_column="0"
                android:textColor="#2980b9" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:id="@+id/lv_complaint_anonymity"
                android:layout_row="16"
                android:layout_column="0"
                android:entries="@array/complaintanonymity"
                android:choiceMode="singleChoice"
                android:listSelector="#83bbe0"
                android:background="#FFF0EDED"
                android:layout_columnSpan="2" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_row="17"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Comments anonymity"
                android:id="@+id/textView37"
                android:layout_row="18"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:textColor="#2980b9" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/lv_comment_anonymity"
                android:layout_row="19"
                android:layout_column="0"
                android:entries="@array/commmentanonymity"
                android:fastScrollEnabled="false"
                android:choiceMode="singleChoice"
                android:listSelector="#83bbe0"
                android:background="#f0eded"
                android:layout_columnSpan="2" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px"
                android:layout_row="20"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vote requests"
                android:id="@+id/textView38"
                android:layout_row="21"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:textColor="#2980b9" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/lv_vote_requests"
                android:layout_row="22"
                android:layout_column="0"
                android:entries="@array/userrequests"
                android:choiceMode="singleChoice"
                android:listSelector="#83bbe0"
                android:background="#FFF0EDED"
                android:layout_columnSpan="2" />
        </GridLayout>
    </ScrollView>

</RelativeLayout>
