<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Vote_Complaint_Title"
        android:text= "title is here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="8dp"
        android:textColor="#045c94"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAllCaps="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/t_issue_type"
    android:layout_gravity="center_horizontal"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textColor="#2980b9"

    android:layout_alignTop="@+id/textView42"
    android:layout_toRightOf="@+id/textView42"
    android:layout_toEndOf="@+id/textView42"
    android:layout_marginLeft="3dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Status:"
    android:id="@+id/textView42"
    android:textColor="#FF63A0C7"
    android:textStyle="bold|italic"
    android:layout_below="@+id/txt_Vote_Complaint_Title"
    android:layout_alignLeft="@+id/txt_Vote_Complaint_Title"
    android:layout_alignStart="@+id/txt_Vote_Complaint_Title"
    android:layout_marginTop="10dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Vote date:"
    android:id="@+id/textView43"
    android:textColor="#FF63A0C7"
    android:textStyle="bold|italic"
    android:layout_below="@+id/t_issue_type"
    android:layout_alignLeft="@+id/textView42"
    android:layout_alignStart="@+id/textView42"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp" />

<TextView
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:id="@+id/txt_Vote_Date"
    android:text="vote timestamp is here"
    android:layout_gravity="center_horizontal"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textColor="#FF63A0C7"
    android:textStyle="italic"
    android:layout_below="@+id/txt_Vote_Status"
    android:layout_toRightOf="@+id/textView43"
    android:layout_toEndOf="@+id/textView43"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Notification sent to GoSL"
    android:id="@+id/txt_Vote_Status"
    android:textColor="#FF63A0C7"
    android:textStyle="italic"
        android:layout_below="@+id/txt_Vote_Complaint_Title"
        android:layout_alignLeft="@+id/t_issue_type"
        android:layout_alignStart="@+id/t_issue_type"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/brn_vote_delete"
        android:src="@mipmap/delete_icon"
        android:background="?android:selectableItemBackground"
        android:layout_below="@+id/txt_Vote_Complaint_Title"
        android:layout_alignRight="@+id/txt_Vote_Complaint_Title"
        android:layout_alignEnd="@+id/txt_Vote_Complaint_Title" />

</RelativeLayout>