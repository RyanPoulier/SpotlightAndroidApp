<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_username"
        android:text= "USERNAME"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#045c94"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewUser"
        android:layout_toEndOf="@+id/imageViewUser"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reputation:"
        android:id="@+id/textView42"
        android:textColor="#FF63A0C7"
        android:textStyle="bold|italic"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewUser"
        android:layout_toEndOf="@+id/imageViewUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="points here"
        android:id="@+id/txtUserReputation"
        android:textColor="#FF63A0C7"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView42"
        android:layout_toEndOf="@+id/textView42" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageViewUser"
        android:src="@mipmap/suggestpic1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/txtUserNumber"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>