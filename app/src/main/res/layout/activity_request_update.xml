<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanpoulier.spotlight2.RequestUpdate">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Complaint ID"
            android:id="@+id/textView20"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="C0001"
            android:id="@+id/textView74"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="170dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Complaint title"
            android:id="@+id/textView72"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#000000" />

        <Space
            android:layout_width="20px"
            android:layout_height="70px"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Message"
            android:id="@+id/textView73"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000000" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_row="5"
            android:layout_column="0"
            android:layout_width="320dp"
            android:layout_height="260dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtStatusMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/write_text"
            android:hint="Send a message along with your status request"
            android:layout_alignParentTop="true"
            android:layout_columnSpan="3"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DAMAGED MANHOLE COVER @ 6.918397, 79.851654"
            android:id="@+id/textView75"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10dp" />

    </GridLayout>

    <Button
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:text="Send message"
        android:id="@+id/button8"
        android:layout_row="5"
        android:layout_column="1"
        android:background="#2980b9"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:onClick="StatusRequestConfirm"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
