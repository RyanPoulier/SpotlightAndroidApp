<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanpoulier.spotlight2.Resubmit_Option">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do you wish to re-submit this complaint?"
        android:id="@+id/textView108"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You have selected a low closure rating. You now have the option of re-submitting the complaint to a specific government official. Do you wish to do this?"
        android:id="@+id/textView109"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:layout_below="@+id/textView108"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:text="NO"
        android:id="@+id/btn_Resubmit_No"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#a34c45"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:onClick="ReturntoCloseComplaint"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:text="YES"
        android:id="@+id/btn_Resubmit_Yes"
        android:layout_row="0"
        android:layout_column="1"
        android:background="#5c9758"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:onClick="OpenResubmit"
        android:layout_below="@+id/space"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/textView109"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />
</RelativeLayout>
