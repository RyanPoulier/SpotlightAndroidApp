<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_officialsname"
        android:text= "name here"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF63A0C7"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txt_officials_position"
        android:layout_alignStart="@+id/txt_officials_position"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position:"
        android:id="@+id/textView42"
        android:textColor="#FF63A0C7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="position here"
        android:id="@+id/txt_officials_position"
        android:textColor="#FF63A0C7"
        android:layout_alignTop="@+id/textView42"
        android:layout_toRightOf="@+id/textView42"
        android:layout_toEndOf="@+id/textView42"
        android:layout_marginLeft="30dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textView106"
        android:textColor="#FF63A0C7"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

</RelativeLayout>