<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="ryanpoulier.spotlight2.ComplaintDetails">

<ScrollView

    android:layout_width="wrap_content"
    android:layout_height="445dp"
    android:padding="10dp"
    android:id="@+id/scrollviewDetails">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#e5e5e5"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Complaint ID"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#000000"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="id here"
            android:id="@+id/txtClosePreviewComplaintID"
            android:layout_row="0"
            android:layout_column="1"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Space
            android:layout_width="20px"
            android:layout_height="30px"
            android:layout_row="1"
            android:layout_column="0"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Complaint title"
            android:id="@+id/textView19"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#000000"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView85"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="title here"
            android:id="@+id/txtClosureTitle"
            android:layout_row="2"
            android:layout_column="1"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Closure date"
            android:id="@+id/textView66"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="N/A"
            android:id="@+id/txtClosureDate"
            android:layout_row="4"
            android:layout_column="1"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <Space
            android:layout_width="20px"
            android:layout_height="30px"
            android:layout_row="5"
            android:layout_column="0"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rating"
            android:id="@+id/textView67"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#000000"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBarRatingPreview"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:numStars="5"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_horizontal"
            android:progressBackgroundTint="#2980b9"
            android:isIndicator="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Final comments"
            android:id="@+id/textView68"
            android:layout_row="8"
            android:layout_column="0"
            android:textColor="#000000"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="N/A"
            android:id="@+id/txtCloseFinalComments"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <Space
            android:layout_width="20px"
            android:layout_height="30px"
            android:layout_row="9"
            android:layout_column="0"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Images submitted by user"
            android:id="@+id/textView69"
            android:layout_row="10"
            android:layout_column="0"
            android:textColor="#000000"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/imageViewClose1"
            android:layout_row="11"
            android:layout_column="0"
            android:background="#aaa9a9"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/imageView3"
            android:layout_row="12"
            android:layout_column="0"
            android:background="#aaa9a9"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/imageView4"
            android:layout_row="13"
            android:layout_column="0"
            android:background="#aaa9a9"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/imageView5"
            android:layout_row="14"
            android:layout_column="0"
            android:background="#aaa9a9"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <VideoView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/videoViewClose"
            android:layout_row="16"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Video submitted by user"
            android:id="@+id/textView97"
            android:layout_row="15"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <Space
            android:layout_width="20px"
            android:layout_height="30px"
            android:layout_row="18"
            android:layout_column="0"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </GridLayout>

</ScrollView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="490dp">

    </GridLayout>

    <Button
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:text="RESUBMIT COMPLAINT"
        android:id="@+id/btn_Close_Complaint"
        android:background="#c97031"
        android:textColor="#ffffff"
        android:textSize="19dp"
        android:layout_gravity="center"
        android:onClick="CloseComplaint"
        android:layout_below="@+id/scrollviewDetails"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

