<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_my_title"
        android:text= "title is here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="8dp"
        android:textColor="#045c94"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_issue_type"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#2980b9"

        android:layout_alignTop="@+id/textView42"
        android:layout_toRightOf="@+id/textView42"
        android:layout_toEndOf="@+id/textView42"
        android:layout_marginLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:id="@+id/textView42"
        android:textColor="#FF63A0C7"
        android:textStyle="bold|italic"
        android:layout_below="@+id/txt_my_title"
        android:layout_alignLeft="@+id/txt_my_title"
        android:layout_alignStart="@+id/txt_my_title"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Submission timestamp:"
        android:id="@+id/textView43"
        android:layout_below="@+id/t_issue_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:textColor="#FF63A0C7"
        android:layout_marginTop="5dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/t_timestamp"
        android:text="timestamp is here"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF63A0C7"
        android:layout_alignTop="@+id/textView43"
        android:layout_toRightOf="@+id/textView43"
        android:layout_toEndOf="@+id/textView43"
        android:layout_marginLeft="3dp"
        android:textStyle="italic"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification sent to GoSL"
        android:id="@+id/textView70"
        android:textColor="#FF63A0C7"
        android:textStyle="italic"
        android:layout_below="@+id/txt_my_title"
        android:layout_alignLeft="@+id/t_issue_type"
        android:layout_alignStart="@+id/t_issue_type"
        android:layout_marginTop="3dp" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/btn_close"
        android:src="@mipmap/close_icon"
        android:background="?android:selectableItemBackground"
        android:layout_below="@+id/textView43"
        android:layout_alignLeft="@+id/textView43"
        android:layout_alignStart="@+id/textView43"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/btn_my_complaint_delete"
        android:src="@mipmap/delete_icon"
        android:background="?android:selectableItemBackground"
        android:layout_alignTop="@+id/btn_close"
        android:layout_toRightOf="@+id/btn_close"
        android:layout_toEndOf="@+id/btn_close"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/btn_my_share"
        android:src="@mipmap/share_icon"
        android:background="?android:selectableItemBackground"
        android:layout_alignTop="@+id/btn_my_complaint_delete"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ID"
        android:id="@+id/txtMyID"
        android:textSize="10dp"
        android:layout_toEndOf="@+id/textView70"
        android:textColor="#ededed"
        android:layout_below="@+id/btn_close"
        android:layout_toRightOf="@+id/textView70"
        android:background="#ffffff" />

</RelativeLayout>