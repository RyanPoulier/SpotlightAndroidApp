<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanpoulier.spotlight2.ReportAbuse"
    android:background="#ffffff">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/listViewAbuse"
        android:layout_centerHorizontal="true"
        android:entries="@array/abuse_types"
        android:fastScrollEnabled="true"
        android:background="#e6ebf0"
        android:layout_below="@+id/textView89"
        android:layout_marginTop="5dp"
        android:choiceMode="singleChoice"
        android:listSelector="#83bbe0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reason for reporting abuse"
        android:id="@+id/textView89"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText5"
        android:background="#e6ebf0"
        android:hint="Other"
        android:autoText="false"
        android:layout_above="@+id/button11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:text="REPORT ABUSE"
        android:id="@+id/button11"
        android:background="#d43f3d"
        android:textColor="#ffffff"
        android:textSize="21dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="SubmitAbuseRequest" />
</RelativeLayout>
