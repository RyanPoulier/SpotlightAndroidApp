<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_issue_type"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#2980b9"

        android:layout_alignTop="@+id/textView42"
        android:layout_toRightOf="@+id/textView42"
        android:layout_toEndOf="@+id/textView42"
        android:layout_marginLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:id="@+id/textView42"
        android:textColor="#FF63A0C7"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comment timestamp"
        android:id="@+id/textView43"
        android:layout_below="@+id/t_issue_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:textColor="#FF63A0C7"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCommentTimestamp"
        android:text="timestamp is here"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF63A0C7"
        android:layout_alignTop="@+id/textView43"
        android:layout_toRightOf="@+id/textView43"
        android:layout_toEndOf="@+id/textView43"
        android:layout_marginLeft="10dp"
        android:textStyle="italic"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="name here"
        android:id="@+id/txt_comment_username"
        android:textColor="#FF63A0C7"
        android:textStyle="italic"
        android:layout_above="@+id/textView43"
        android:layout_alignLeft="@+id/txtCommentTimestamp"
        android:layout_alignStart="@+id/txtCommentTimestamp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtComment"
        android:textColor="#000000"
        android:layout_below="@+id/txtCommentTimestamp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="comment appears here"
        android:layout_marginLeft="10dp"
        android:textStyle="italic"
        android:textSize="15dp"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:text="View profile"
        android:id="@+id/button15"
        android:layout_row="0"
        android:layout_column="1"
        android:textColor="#ffffff"
        android:background="#48a4e0"
        android:textSize="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView43"
        android:layout_alignEnd="@+id/textView43"
        android:layout_marginTop="5dp" />

</RelativeLayout>