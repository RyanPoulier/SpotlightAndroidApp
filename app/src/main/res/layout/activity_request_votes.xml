<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanpoulier.spotlight2.RequestVotes">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Space
            android:layout_width="20px"
            android:layout_height="40px"
            android:layout_row="2"
            android:layout_column="0" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="295dp"
            android:id="@+id/listViewSuggestedUsers"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:divider="#ccd7e3"
            android:dividerHeight="8.0sp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:choiceMode="multipleChoice"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Complaint ID"
            android:id="@+id/textView76"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="C0001"
            android:id="@+id/textView77"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="170dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Complaint title"
            android:id="@+id/textView78"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Suggested Users"
            android:id="@+id/textView79"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DAMAGED MANHOLE COVER @ 6.918397, 79.851654"
            android:id="@+id/textView80"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10dp" />
    </GridLayout>

    <Button
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:text="REQUEST VOTE"
        android:id="@+id/button7"
        android:layout_row="5"
        android:layout_column="1"
        android:background="#2980b9"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:onClick="SubmitVoteRequest"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
